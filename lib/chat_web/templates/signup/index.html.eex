<h1>Create new user</h1>

<%= form_for @changeset, Routes.signup_path(@conn, :create), fn f -> %>
  <label>
    Email: <%= text_input f, :email %>
  </label>

  <label>
    Password: <%= text_input f, :password %>
  </label>

  <label>
    Nickname: <%= text_input f, :nickname %>
  </label>

  <%= submit "Submit" %>
<% end %>
